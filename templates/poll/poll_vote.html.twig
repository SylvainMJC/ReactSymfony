    <div class="mt-12 p-6 max-w-md mx-auto w-full">
    <h1 class="text-2xl font-bold text-center mb-2">{{ poll.title }}</h1>
    <p class="text-center mb-6 text-customGrey">{{ poll.description }}</p>
    <div class="space-y-4">
        {{ form_start(form) }}
        <div class="space-y-4">
            {# Affichage de chaque choix de r√©ponse #}
            {% for choice in form.answerChoice %}
               <div class="flex items-center mt-1 p-3 w-full border border-customGrey/20 rounded-md">
                 {{ form_widget(choice, {'attr': {'class': 'form-radio size-4 text-primary focus:ring-primary focus:border-primary focus:bg-primary/20'}}) }}
                 {{ form_label(choice, null, {'label_attr': {'class': 'ml-2 text-lg font-medium text-primary'}}) }}
               </div>

            {% endfor %}
            <div class="text-red-500 text-sm mt-2">
                {{ form_errors(form.answerChoice) }}
            </div>

        <button class="w-full mt-4 py-2 px-4 bg-primary text-white font-semibold rounded-md hover:bg-primary/80 transition-all">
            {{ button_label|default('Voter') }}
        </button>
        </div>


        {{ form_end(form) }}
    </div>
</div>


