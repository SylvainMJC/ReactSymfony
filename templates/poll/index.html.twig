{% extends 'base.html.twig' %}

{% block title %}Poll index{% endblock %}

{% block body %}
    <h1>Poll index</h1>

    <table class="table-fixed bg-red-500">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Type</th>
                <th>Deadline</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for poll in polls %}
            <tr>
                <td>{{ poll.id }}</td>
                <td>{{ poll.title }}</td>
                <td>{{ poll.description }}</td>
                <td>{{ poll.createdAt ? poll.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ poll.updatedAt ? poll.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ poll.type }}</td>
                <td>{{ poll.deadline ? poll.deadline|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_poll_show', {'id': poll.id}) }}">show</a>
                    <a href="{{ path('app_poll_edit', {'id': poll.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_poll_new') }}">Create new</a>
{% endblock %}
